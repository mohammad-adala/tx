<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_responseusr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="root.libyaguide.com.txx.responseusr"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView
            android:text="You've recieved a response from "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            android:layout_weight="1"
            android:typeface="monospace" />

        <TextView
            android:text="user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:textColor="@color/abc_input_method_navigation_guard" />
    </LinearLayout>

    <TextView
        android:text="Pickup Location "
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:id="@+id/textView20"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:typeface="monospace"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textAlignment="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:text="e.g. Tripoli-Draibi-medical supply marts "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView24" />
    </LinearLayout>

    <TextView
        android:text="Destination"
        android:layout_width="match_parent"
        android:id="@+id/textView21"
        android:typeface="monospace"
        android:textStyle="normal|bold"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textAlignment="center"
        android:layout_height="32dp"
        android:textSize="18sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:text="e.g. Tripoli-suq_aljumaa-****"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView25"
            android:layout_weight="1"
            android:typeface="monospace" />
    </LinearLayout>

    <TextView
        android:text="Time"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:id="@+id/textView22"
        android:textStyle="normal|bold"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textSize="18sp"
        android:textAlignment="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <TextView
            android:text="e.g. 21st Nov 2016 - 11:30 AM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView26"
            android:layout_weight="1"
            android:typeface="monospace" />
    </LinearLayout>

    <TextView
        android:text="Price"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:id="@+id/textView23"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:textSize="18sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">

        <TextView
            android:text="e.g. 8 LYD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView27"
            android:layout_weight="1"
            android:typeface="monospace" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:text="write a note ..."
        android:ems="10"
        android:id="@+id/note"
        style="@android:style/Widget.AutoCompleteTextView"
        android:textColor="?android:attr/textColorHint"
        android:layout_marginBottom="35dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/accept"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="50dp" />

        <Button
            android:text="Decline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/decline"
            android:layout_weight="1"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="15dp" />
    </LinearLayout>
</LinearLayout>
